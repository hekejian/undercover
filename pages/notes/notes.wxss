@import "../common/weui.wxss";
.textarea-wrp {
    margin: 10rpx;
    background-color: #F5EEF8;
}
.textarea {
    width: 100%;
    padding-left: 20rpx;
    padding-right: 20rpx;
    height: 50rpx;
    font-size: 25rpx;
}
.page-body-info {
  display: flex;
  margin-top: 40rpx;
  padding: 0;
  flex-direction: column;
  height: 360rpx;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  align-items: center;
  justify-content: center;
}

.image-plus {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx solid #D9D9D9;
  position: relative;
}
.image-plus-nb{
  border: 0;
}
.image-plus-text{
  color: #888888;
  font-size: 28rpx;
}
.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}

image {
  width: 150rpx;
  height: 150rpx;
}

.page-body-wrapper {
  justify-content: space-between;
  flex-grow: 1;
  margin-bottom: 300rpx;
}
.page-body-time {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.time-big {
  font-size: 40rpx;
}
.time-small {
  font-size: 30rpx;
}

.page-body-buttons {
  margin-top: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #6C5BB7
}
.page-body-button {
  text-align: center;
}
.record-btns{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.btn-info{
  color: #fff;
  font-size: 28rpx;

}
.ensure-btn{
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-bottom: 5rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-color: #6C5BB7;
  display: flex;
  align-items: center;
  justify-content: center;
}
.button-stop-record {
  width: 110rpx;
  height: 110rpx;
  border: 20rpx solid #fff;
  background-color: #f55c23;
  border-radius: 130rpx;
  margin: 0 auto;
}
.record-section{
  width: 100%;
  position: fixed;
  bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.up-container{
  position: fixed;
  bottom: 90rpx;
  right: 30rpx;
  
}
.btn{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #6C5BB7;
  color:#fff;
  text-align: center;
  line-height: 80rpx;
}
.btn-text{
  display: inline-block;
  font-size: 30rpx;
  height: 35rpx;
}
.blank{
  width: 100%;
  height: 290rpx;
}
.pause-btn{
  display: flex;
  flex-direction: row;
  
}